<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Recruiter Registration</title>
        <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        <style>
            .divider:after,
            .divider:before {
                content: "";
                flex: 1;
                height: 1px;
                background: #d3d1d1;
            }

            img {
                border-radius: 50%;
                width: 150px;
                height: 150px;
                object-fit: cover;
            }

            #preview {
                display: block;
            }
        </style>
    </head>

    <body>
        <div class="bg-secondary min-vh-100 ">
            <div class="container py-2">
                <div class="container form bg-light px-5 py-3 rounded-4">
                    <form action="/recruiter/register" method="post">
                        <div class="d-flex justify-content-between  ">
                            <div class="left">
                                <h3>Welcome User </h3>
                                <p>Just a small step away from hiring extraordinary candidates</p>
                                <h4 class="fw-normal ">Compeleting Registration</h4>
                            </div>
                            <div class="right">
                                <label for="companyPhoto" style="position: relative;">
                                    <img id="preview"
                                        src="https://images.unsplash.com/photo-1711994872181-1e112e5e18e0?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxlZGl0b3JpYWwtZmVlZHwyfHx8ZW58MHx8fHx8"
                                        alt="Preview">
                                    <input type="file" id="companyPhoto" name="companyPhoto" accept="image/*"
                                        style="position: absolute; top: 0; left: 0; opacity: 0; width: 100%; height: 100%;"
                                        onchange="previewPhoto(event) ">
                                </label>

                            </div>
                        </div>

                        <div class="divider d-flex align-items-center my-4">
                            <p class="text-center fw-bold mx-3 mb-0">Company Information</p>
                        </div>
                        <div class="row">
                            <div class="col-8">
                                <div class="form-group">
                                    <label for="comapanyName" class="form-label">Company Name</label>
                                    <input type="text" id="companyName" class="form-control" name="companyName"
                                        placeholder="Comapany Name">
                                </div>
                            </div>
                            <div class="col-4 ">
                                <div class="form-group">
                                    <label for="companyWeb" class="form-label">Company Website Link</label>
                                    <input type="url" class="form-control " id="companyWeb" name="companyWebsite"
                                        placeholder="website link">
                                </div>
                            </div>
                            <div class="col-12 mt-3">
                                <div class="form-floating">
                                    <textarea class="form-control" name="companyDescription" id="companydesc"
                                        placeholder='Describe the company' style="height: 100px"></textarea>
                                    <label for="companydesc">Company Description</label>
                                </div>
                            </div>
                        </div>
                        <div class="divider d-flex align-items-center my-4">
                            <p class="text-center fw-bold mx-3 mb-0">Recruiter Information</p>
                        </div>
                        <div class="row">
                            <div class="col-8">
                                <div class="form-group">
                                    <label for="recruiterName" class="form-label">Recruiter Name</label>
                                    <input type="text" id="recruiterName" class="form-control" name="recruiterName"
                                        placeholder="full name">
                                </div>
                            </div>
                            <div class="col-4 ">
                                <div class="form-group">
                                    <label for="recruiterTitle" class="form-label">Recruiter Designation</label>
                                    <input type="text" class="form-control " id="recruiterTitle" name="recruiterTitle"
                                        placeholder="designation">
                                </div>
                            </div>
                            <div class="col-6 my-3">
                                <div class="form-group">
                                    <label for="recruiterPhone" class="form-label">Mobile Number</label>
                                    <input type="tel" id="recruiterPhone" class="form-control "
                                        name="recruiterPhoneNumber">
                                </div>
                            </div>
                            <div class="col-6 my-3">
                                <div class="form-group">
                                    <label for="recruiterEmail" class="form-label">Email</label>
                                    <input type="email" id="recruiterEmail" class="form-control " name="recruiterEmail">
                                </div>
                            </div>
                            <div class="controls text-center ">
                                <button type="submit" class="btn btn-success">Register</button>
                            </div>
                        </div>

                    </form>

                </div>
            </div>
        </div>


        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>
        <script>
            function previewPhoto(event) {
                const preview = document.getElementById('preview');
                const file = event.target.files[0];
                const reader = new FileReader();

                reader.onload = function (e) {
                    preview.src = e.target.result;
                }

                reader.readAsDataURL(file);
            }

        </script>

    </body>

</html>