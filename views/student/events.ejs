<!doctype html>
<html lang="en">

    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>All Drives</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    </head>

    <body>
        <%- include('../partials/navbar.ejs') %>
        <main class="container p-1">
            <% if(allEvents.length <1){ %>
            <span><b>No events yet</b></span>
            <% }else { %>
            <div class="container d-flex gap-3 flex-wrap">
                <% allEvents.forEach((event) => { %>
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h2 class="card-title"><%= event.companyName %></h2>
                        <h5 class="card-text"><%= event.eventName %></h5>
                        <h5 class="card-text"><%= event.eventDate %></h5>
                        <p class="card-text fs-4"><%= event.eventMessage %>
                        </p>
                    </div>
                </div>
                <% }) %>
            </div>
            <% } %>
        </main>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
    </body>

</html>