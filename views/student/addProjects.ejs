<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Add Project</title>
        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    </head>

    <body>
        <div class="container w-75 mt-5">
            <h2>Add Project</h2>
            <form id="addProjectForm" action="/profile/<%= sid %>/add-project" method="post">
                <div class="mb-3">
                    <label for="projectName" class="form-label">Project Name</label>
                    <input type="text" class="form-control" id="projectName" name="project[projectName]" required>
                    <div class="invalid-feedback">
                        Please enter a project name.
                    </div>
                </div>
                <div class="mb-3">
                    <label for="projectDescription" class="form-label">Project Description</label>
                    <textarea class="form-control" id="projectDescription" name="project[projectDescription]" rows="3"
                        required></textarea>
                    <div class="invalid-feedback">
                        Please enter a project description.
                    </div>
                </div>
                <div class="mb-3">
                    <label for="projectLink" class="form-label">Project Link</label>
                    <input type="url" class="form-control" id="projectLink" name="project[projectLink]" required>
                    <div class="invalid-feedback">
                        Please enter a valid URL.
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Add Project</button>
            </form>
        </div>

        <!-- Bootstrap JS (optional, for form validation) -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

        <script>
            // Fetch the form element
            const form = document.getElementById('addProjectForm');

            // Add event listener for form submission
            form.addEventListener('submit', function (event) {
                // Check if the form is valid
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }

                // Mark form fields as touched to display validation messages
                form.classList.add('was-validated');
            });
        </script>
    </body>

</html>