<!doctype html>
<html lang="en">

    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Dashboard</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    </head>

    <body>
        <section class="wrapper">
            <%- include('../partials/navbar.ejs') %>
            <% if(currentUser.identity === 'student'){ %>

            <!-- Student Dashboard  -->
            <div class="container mt-4 student-dashboard">
                <%- include('../partials/flashPartials.ejs') %>
                <h2 class="mb-4">My Tests</h2>
                <div class="row">

                    <div class="row mt-4">
                        <div class="col-lg-6">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">Notifications</h5>
                                    <% if(student_notifications.length < 1){ %>
                                    <span>No New Notifications</span>
                                    <% }else{ %>
                                    <ul class="list-group">
                                        <% student_notifications.forEach(s=>{ %>
                                        <li class="list-group-item"><%= s.message %> <span
                                                class="badge text-bg-danger">New</span></li>
                                        <% }) %>
                                    </ul>
                                    <% } %>
                                    <% if(global_notif_students.length < 1){ %>
                                    <span>No New Notifications</span>
                                    <% }else{ %>
                                    <ul class="list-group">
                                        <% global_notif_students.forEach(s=>{ %>
                                        <li class="list-group-item"><%= s.message %> <span
                                                class="badge text-bg-danger">New</span></li>
                                        <% }) %>
                                    </ul>
                                    <% } %>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-6">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">Test Scores</h5>
                                    <table class="table">
                                        <thead>
                                            <tr>

                                                <th scope="col">Test</th>
                                                <th scope="col">Company</th>
                                                <th scope="col">Score</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>Aptitude</td>
                                                <td>Google</td>
                                                <td>60%</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-lg-8">
                            <% if(drives.length < 1){  %>
                            <% }else{ %>
                            <div class="row mt-4">
                                <div class="col-lg-8">
                                    <div class="card">
                                        <div class="card-body">
                                            <h5 class="card-title">Upcoming Drives</h5>
                                            <div class="list-group  ">
                                                <% drives.forEach((d,index)=>{ %>
                                                <a href="/drive/<%= d._id %>"
                                                    class="list-group-item list-group-item-action">
                                                    Drive-<%= index+1 %>
                                                    <%= d.companyName %>
                                                    <%= d.driveDate.toDateString() %>
                                                    <button class="btn btn-sm btn-outline-success float-end  "
                                                        disabled>Active</button>
                                                </a>
                                                <% }) %>
                                            </div>
                                            <a href="drive/all" class="btn btn-primary mt-3">View All Drives</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% } %>
                        </div>
                    </div>
                </div>

                <% }else if(currentUser.identity === 'admin'){ %>

                <!-- Admin Dashboard  -->
                <div class="container-fluid mt-4">
                    <div class="row">
                        <div class="col-md-3">
                            <!-- Side navigation -->
                            <div class="list-group">
                                <a href="#" class="list-group-item list-group-item-action active">Dashboard</a>
                                <a href="#" class="list-group-item list-group-item-action">Users</a>
                                <a href="/admin/all" class="list-group-item list-group-item-action">Students</a>
                                <a href="#" class="list-group-item list-group-item-action">Jobs</a>
                                <a href="#" class="list-group-item list-group-item-action">Events</a>
                                <a href="#" class="list-group-item list-group-item-action">Settings</a>
                            </div>
                        </div>
                        <div class="col-md-9">
                            <!-- Main content area -->
                            <div class="row">
                                <div class="col-md-6">
                                    <!-- Card for user statistics -->
                                    <div class="card">
                                        <div class="card-header">
                                            User Statistics
                                        </div>
                                        <div class="card-body">
                                            <p>Total Users: 500</p>
                                            <p>Active Users: 350</p>
                                            <p>Inactive Users: 150</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <!-- Card for job statistics -->
                                    <div class="card">
                                        <div class="card-header">
                                            Job Statistics
                                        </div>
                                        <div class="card-body">
                                            <p>Total Jobs: 100</p>
                                            <p>Active Jobs: 70</p>
                                            <p>Inactive Jobs: 30</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row mt-4">
                                <div class="col-md-12">
                                    <!-- Card for recent activity -->
                                    <div class="card">
                                        <div class="card-header">
                                            Recent Activity
                                        </div>
                                        <div class="card-body">
                                            <ul>
                                                <li>User John Doe posted a new job</li>
                                                <li>User Jane Smith updated their profile</li>
                                                <li>User Admin deleted a job posting</li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <% }else if(currentUser.identity === 'recruiter'){ %>

                <!-- Recruiter Dashboard  -->
                <div class="container mt-4">
                    <div class="row">
                        <div class="col-md-7">
                            <div class="card">
                                <div class="card-header">
                                    My Job Postings
                                </div>
                                <% if(rec_drives.length < 1 ){ %>
                                <div class="card-body">
                                    <p>No Drives Created</p>
                                </div>
                                <% }else { %>

                                <div class="card-body">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>Title</th>
                                                <th>Applications</th>
                                                <th>Status</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>

                                            <% rec_drives.forEach((drive)=>{ %>
                                            <tr>
                                                <td><%= drive.jobTitle %></td>
                                                <td><%= drive.appliedStudents.length %></td>
                                                <td><%= drive.status %></td>
                                                <td>
                                                    <a href="/drive/<%= drive._id  %>/applications"
                                                        class="btn btn-sm btn-primary">View Applications</a>
                                                    <% if(drive.status === 'not-started'){%>
                                                    <button class="btn btn-sm btn-success ">Start</button>
                                                    <% }else if(drive.status === 'active'){ %>
                                                    <button class="btn btn-sm btn-warning ">Stop</button>
                                                    <% } %>
                                                </td>
                                            </tr>
                                            <% }) %>


                                        </tbody>
                                    </table>
                                    <a href="/recruiter/my-drives/<%= currentUser.Rid %>"
                                        class="btn btn-success btn-block">Show
                                        All</a>
                                </div>
                                <% } %>
                            </div>
                        </div>
                        <!-- <div class="col-md-5">
                            <div class="card">
                                <div class="card-header">
                                    Candidate Management
                                </div>
                                <div class="card-body">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>Name</th>
                                                <th>Job Applied</th>
                                                <th>Status</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>John Doe</td>
                                                <td>Software Engineer Internship</td>
                                                <td>Shortlisted</td>
                                                <td>
                                                    <button class="btn btn-sm btn-primary">View Profile</button>
                                                    <button class="btn btn-sm btn-warning">Send Message</button>
                                                    <button class="btn btn-sm btn-danger">Reject</button>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div> -->
                        <div class="row mt-4">
                            <div class="col-md-12">
                                <div class="card">
                                    <div class="card-header">
                                        Events
                                    </div>
                                    <div class="card-body">
                                        <table class="table">
                                            <thead>
                                                <tr>
                                                    <th>Title</th>
                                                    <th>Date</th>
                                                    <th>Status</th>
                                                    <th>Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>


                                                <!-- <tr>
                                                    <td>Mock Interview Session</td>
                                                    <td>2024-05-15</td>
                                                    <td>Upcoming</td>
                                                    <td>
                                                        <button class="btn btn-sm btn-primary">View Details</button>
                                                        <button class="btn btn-sm btn-warning">Edit</button>
                                                        <button class="btn btn-sm btn-danger">Delete</button>
                                                    </td>
                                                </tr> -->



                                            </tbody>
                                        </table>
                                        <a href="/recruiter/add-event/<%= currentUser.Rid %>"
                                            class="btn btn-success btn-block">Add New
                                            Event</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                    <% } %>
        </section>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
            integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
            crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
            integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
            crossorigin="anonymous"></script>
    </body>

</html>