<!doctype html>
<html lang="en">

    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Dashboard</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    </head>

    <body>
        <section class="wrapper">
            <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
                <div class="container-fluid">
                    <a class="navbar-brand" href="#">P-Cell</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false"
                        aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse d-lg-flex justify-content-lg-between " id="navbarNavAltMarkup">
                        <div class="navbar-nav">
                            <a class="nav-link" aria-current="page" href="/">Home</a>
                            <a class="nav-link" href="#">Features</a>
                            <a class="nav-link" href="#"></a>
                        </div>
                        <div class="nav-item ">
                            <% if(!currentUser){ %>
                            <a href="/login" class="btn btn-sm btn-light  ">login</a>
                            <a href="/register" class="btn btn-sm btn-info ">register</a>
                            <% }else{%>
                            <img src="https://images.unsplash.com/photo-1483104879057-379b6c2fe5a2?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxlZGl0b3JpYWwtZmVlZHwyfHx8ZW58MHx8fHx8"
                                alt="Profile Picture" class="rounded-circle"
                                style="width: 40px; height: 40px; object-fit: cover;">
                            <a href="/logout" class="btn btn-sm btn-danger  ">logout</a>
                            <% } %>
                        </div>
                    </div>

                </div>
            </nav>

            <% if(currentUser.identity === 'student'){ %>

            <!-- Student Dashboard  -->
            <div class="container mt-4 student-dashboard">
                <h2 class="mb-4">My Tests</h2>
                <div class="row">

                    <div class="row mt-4">
                        <div class="col-lg-6">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">Notifications</h5>
                                    <ul class="list-group">
                                        <li class="list-group-item">Notification 1</li>
                                        <li class="list-group-item">Notification 2</li>
                                        <li class="list-group-item">Notification 3</li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-6">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">Test Scores</h5>
                                    <table class="table">
                                        <thead>
                                            <tr>

                                                <th scope="col">Test</th>
                                                <th scope="col">Company</th>
                                                <th scope="col">Score</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>Mark</td>
                                                <td>Otto</td>
                                                <td>60%</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-lg-8">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">Upcoming Drives</h5>
                                    <div class="list-group">
                                        <a href="#" class="list-group-item list-group-item-action">Drive 1 - Google
                                            (10th
                                            May)</a>
                                        <a href="#" class="list-group-item list-group-item-action">Drive 2 - Microsoft
                                            (15th
                                            May)</a>
                                        <a href="#" class="list-group-item list-group-item-action">Drive 3 - Amazon
                                            (20th
                                            May)</a>
                                    </div>
                                    <a href="drive/all" class="btn btn-primary mt-3">View All Drives</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <% }else if(currentUser.identity === 'admin'){ %>

                <!-- Admin Dashboard  -->
                <div class="container-fluid mt-4">
                    <div class="row">
                        <div class="col-md-3">
                            <!-- Side navigation -->
                            <div class="list-group">
                                <a href="#" class="list-group-item list-group-item-action active">Dashboard</a>
                                <a href="#" class="list-group-item list-group-item-action">Users</a>
                                <a href="/admin/all" class="list-group-item list-group-item-action">Students</a>
                                <a href="#" class="list-group-item list-group-item-action">Jobs</a>
                                <a href="#" class="list-group-item list-group-item-action">Events</a>
                                <a href="#" class="list-group-item list-group-item-action">Settings</a>
                            </div>
                        </div>
                        <div class="col-md-9">
                            <!-- Main content area -->
                            <div class="row">
                                <div class="col-md-6">
                                    <!-- Card for user statistics -->
                                    <div class="card">
                                        <div class="card-header">
                                            User Statistics
                                        </div>
                                        <div class="card-body">
                                            <p>Total Users: 500</p>
                                            <p>Active Users: 350</p>
                                            <p>Inactive Users: 150</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <!-- Card for job statistics -->
                                    <div class="card">
                                        <div class="card-header">
                                            Job Statistics
                                        </div>
                                        <div class="card-body">
                                            <p>Total Jobs: 100</p>
                                            <p>Active Jobs: 70</p>
                                            <p>Inactive Jobs: 30</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row mt-4">
                                <div class="col-md-12">
                                    <!-- Card for recent activity -->
                                    <div class="card">
                                        <div class="card-header">
                                            Recent Activity
                                        </div>
                                        <div class="card-body">
                                            <ul>
                                                <li>User John Doe posted a new job</li>
                                                <li>User Jane Smith updated their profile</li>
                                                <li>User Admin deleted a job posting</li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <% }else if(currentUser.identity === 'recruiter'){ %>

                <!-- Recruiter Dashboard  -->
                <div class="container mt-4">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header">
                                    My Job Postings
                                </div>
                                <div class="card-body">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>Title</th>
                                                <th>Applications</th>
                                                <th>Status</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>Software Engineer Internship</td>
                                                <td>10</td>
                                                <td>Active</td>
                                                <td>
                                                    <button class="btn btn-sm btn-primary">View Applications</button>
                                                    <button class="btn btn-sm btn-danger">Delete</button>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                    <button class="btn btn-success btn-block">Add New Job</button>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header">
                                    Candidate Management
                                </div>
                                <div class="card-body">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>Name</th>
                                                <th>Job Applied</th>
                                                <th>Status</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>John Doe</td>
                                                <td>Software Engineer Internship</td>
                                                <td>Shortlisted</td>
                                                <td>
                                                    <button class="btn btn-sm btn-primary">View Profile</button>
                                                    <button class="btn btn-sm btn-warning">Send Message</button>
                                                    <button class="btn btn-sm btn-danger">Reject</button>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-4">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-header">
                                    Events
                                </div>
                                <div class="card-body">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>Title</th>
                                                <th>Date</th>
                                                <th>Status</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>Mock Interview Session</td>
                                                <td>2024-05-15</td>
                                                <td>Upcoming</td>
                                                <td>
                                                    <button class="btn btn-sm btn-primary">View Details</button>
                                                    <button class="btn btn-sm btn-warning">Edit</button>
                                                    <button class="btn btn-sm btn-danger">Delete</button>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                    <button class="btn btn-success btn-block">Add New Event</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


                <% } %>
        </section>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
            integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
            crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
            integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
            crossorigin="anonymous"></script>
    </body>

</html>